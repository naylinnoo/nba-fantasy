{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./",
        "paths": {
            "@app/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@styles/*": ["./src/styles/*"],
            "@modules/*": ["./src/ducks/mudles/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "components/teams/team/create/form.js",
        "components/teams/team/create/MenuList.js",
        "components/teams/team/create/VirtualizedList.js",
        "components/teams/team/create/form.js",
        "components/teams/team/create/MenuList.js",
        "components/teams/team/create/VirtualizedList.js"
    ],
    "exclude": ["node_modules"]
}
